<div class="container">
  <div class="colums is-multiline">
    <div class="column is-6 is-offset-3">
      <div class="content is-size-3">
        <%= article.title%>
      </div>
    </div>
  <div class="column is-6 is-offset-3">
    <div class="card">
      <% unless local_assigns[:show] %>
        <header class="card-header">
          <p class="card-header-title">
            <%= link_to article.title, article_path(article)%>
          </p>
        <% end %>
      </header>
      <div class="card-content">
        <div class="content">
          <%= article.body %>
        </div>
      </div>
      <footer class="card-footer">
        <% if local_assigns[:show] %>
          <%= link_to 'Back', root_path, class: "card-footer-item" %>
        <% else %>
          <%= link_to 'Show', article_path(article), class: "card-footer-item" %>
        <% end %>
        <%= link_to 'Edit', edit_article_path(article), class: "card-footer-item" %>
        <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"}, class: "card-footer-item" %>
      </footer>
    </div>
  </div>